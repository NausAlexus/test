---
import Logo from "./Logo.astro";
import ButtonHeader from "./ButtonHeader.astro";
import NavHeader from "./NavHeader.astro";
import ButtonMobileHeader from "./ButtonMobileHeader.astro";
---

<header class="header-container">
  <div class="header">
    <a href="/test/"><Logo /></a>

    <NavHeader />
    <div class="button">
      <ButtonHeader />
      <ButtonMobileHeader />
    </div>
  </div>
</header>

<style>
  .header-container {
    position: fixed;
    top: 0;
    z-index: 1000;
    width: 100%;
    height: 60px;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
    display: flex;
    justify-content: center;
    align-items: center;

    background: rgba(0, 0, 0, 0.66);
    backdrop-filter: blur(30px);
    -webkit-backdrop-filter: blur(30px);

    box-shadow:
      0px 0px 10px 0px #00000033,
      0px 0px 10px 0px #ffffff40 inset,
      0px 4px 4px 0px #ffffff4d inset,
      0px 2px 6px 0px #0000004d;

    font-weight: 700;
    will-change: backdrop-filter;

    transition: all 0.1s ease;
  }
  .header {
    width: 1194px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
  }

  @media (max-width: 1025px) {
    .header-container {
      align-items: flex-start;
      background: #00000066;
    }
    .header-container.visable {
      height: 451px;
    }
    .header {
      width: 100%;
      align-items: flex-start;
    }
    .button {
      display: flex;
      gap: 10px;
    }
  }
</style>
