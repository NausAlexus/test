---
import navConfig from "../config/nav-config.json"; // Измените путь на правильный в зависимости от расположения файла

const pathName = new URL(Astro.request.url).pathname;
const currentPath = pathName.split("/").filter(Boolean)[0];
---

<nav class="nav-container">
  <ul class="nav">
    {
      navConfig.links.map((item) => (
        <li class="nav-item">
          <a
            class="nav-link"
            href={item.path}
            class:list={{ active: currentPath === item.path.replace("/", "") }}
          >
            {item.name}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .nav {
    display: flex;
    padding-inline-start: 0;
    
  }
  .nav.visible {
    display: flex; /* Показать меню, если есть класс 'visible' */
  }
  .nav-item {
    list-style: none;
    border-radius: 54px;
    transition: opacity 0.3s ease;
  }
  @media(min-width: 1024px){
        .nav-itemi:hover {
            opacity: 0.7;
        }
  }

  .nav-item:not(:first-child) {
    margin-left: 20px;
  }
  .nav-link {
    text-decoration: none;
    color: var(--color-text);
    padding: 4px 10px;
    font-size: 16px;
    line-height: 19.2px;
  }
  .active {
    opacity: 0.7;
  }

  @media (max-width: 1025px) {
    .nav {
      flex-direction: column;
      gap: 20px;
      margin-top: 107px;
      justify-content: center;
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      align-items: center;
      display: none;

    }
    .nav-link{
      font-size: 22px;
      font-weight: 700;
      line-height: 26.4px;

    }
    .nav-item:not(:first-child) {
      margin-left: 0px;
    }
    

  }
</style>

