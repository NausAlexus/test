---
// import PriceImg from "../../../img/home_img/price-home-img.svg"
import PriceDemoWidget from "./PriceDemoWidget.astro"
import PriceMonthlyWidget from "./PriceMonthlyWidget.astro"
import priceHomeConfig from "../config/main-config.json"
const priceHomeData = priceHomeConfig.priceHome[0];
---

<div class="price-home-container">
    <h2>{priceHomeData.title}</h2>
    <div class="price-widget-container">
        <PriceDemoWidget/>
        <PriceMonthlyWidget/>
    </div>
    <img src="/test/img/home_img/price-home-img.svg" alt="Price">
</div>

<style>
    .price-home-container {
        margin-top: 130px;
        width: 1194px;
        position: relative;
    }
    .price-widget-container {
        width: 544px;
        position: absolute;
        right: 0;
        bottom: 32px;
    }
    h2 {
        right: 0;
        margin: 0;
		font-family: "Sitara-Bold", sans-serif;
        font-size: 120px;
        font-style: italic;
        font-weight: 700;
        line-height: 108px;
        position: absolute;
        z-index: -2;
    }
    img {
        display: block;
        width: 700px;
        height: 764px;
        z-index: -1;
    }
    /* Адаптируем под разрешение от 1024 до 1400px */
    @media (max-width: 1400px) {
        .price-home-container {
            width: 1000px;
        }
        h2 {
            font-size: 96px;
        }
        .price-widget-container {
            width: 500px;
            left: 500px;
        }
    }
    /* Адаптируем под разрешение от 768 до 1024px */
    @media (max-width: 1024px) {
        .price-home-container {
            margin-top: 40px;
            width: 760px;
        }
        h2 {
            font-size: 72px;
        }
        .price-widget-container {
            width: 480px;
            left: 270px;
            top: 130px;
        }
    }
    /* Адаптируем под разрешение от 425 до 768px */
    @media (max-width: 768px) {
        .price-home-container {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .price-widget-container {
            position: static;
            display: flex;
            flex-direction: column;
            width: 100%;
        }
        h2 {
            font-size: 40px;
            line-height: 36px;
            position: static;
            text-align: center;
        }
        img {
            margin-top: 20px;
            width: 400px;
            height: auto;
        }
    }
    /* Адаптируем под разрешение до 425px */
    @media (max-width: 425px) {
        .price-widget-container {
            width: 328px;
        }
        img {
            width: 314px;
            height: 316px;
        }
    }
</style>