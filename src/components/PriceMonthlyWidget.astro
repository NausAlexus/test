---
import GetStartedBtn from "./GetStartedBtn.astro";
import priceHomeConfig from "../config/main-config.json"
const priceHomeData = priceHomeConfig.priceHome[0];
---

<div class="price-monthly-widget">
    <h3>{priceHomeData.PriceMonthlyWidget[0].subtitle}</h3>
    <div class="monthly-price-container">
        <div class="monthly-price">
            <h3>{priceHomeData.PriceMonthlyWidget[0].price}</h3>
            <p>{priceHomeData.PriceMonthlyWidget[0].descriptionPrice}</p>
        </div>
        <div class="monthly-price-text">
            <p>{priceHomeData.PriceMonthlyWidget[0].description}</p>
        </div>
    </div>
    <div class="price-monthly-btn-container">
        <a href={priceHomeData.PriceMonthlyWidget[0].link}><GetStartedBtn/></a>
    </div>
</div>

<style>
        .price-monthly-widget {
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-top: 20px;
        width: 100%;

        padding: 40px;
        border-radius: 30px;

        background: #00000066;
        backdrop-filter: blur(30px);
        -webkit-backdrop-filter: blur(30px);
        will-change: backdrop-filter;
        box-shadow: 
            0px 0px 10px 0px #00000033,
            0px 0px 10px 0px #FFFFFF40 inset,
            0px 4px 4px 0px #FFFFFF4D inset,
            0px 2px 6px 0px #0000004D;
    }
    h3 {
        margin: 0;
        font-family: "Sitara-Bold", sans-serif;
        font-size: 30px;
        font-weight: 700;
        line-height: 30px;
        text-align: left;
    }
    .monthly-price-container {
        width: 100%;
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
    }
    p {
        margin: 0;
        font-family: "Sitara-Regular", sans-serif;
        font-size: 18px;
        font-weight: 400;
        line-height: 21.6px;
        text-align: left;
    }
    .monthly-price p {
        margin-top: 10px;
        color: var(--color-widget-text);
    }
    .monthly-price-text p {
        padding: 0 0 40px 40px;
        width: 268px;
    }
    .price-monthly-btn-container {
        align-self: flex-end;
        margin-top: auto;
    }
    /* Адаптируем под разрешение от 425 до 768px */
    @media (max-width: 768px) {
        .price-monthly-widget {
            margin-top: 20px;
        }
        .monthly-price-text p {
            padding: 0 0 10px 20px;
            width: 100%;
        }
    }
    /* Адаптируем под разрешение до 425px */
    @media (max-width: 425px) {
        .monthly-price-container {
            display: flex;
            flex-direction: column;
        }
        h3 {
            font-size: 24px;
            font-weight: 700;
            line-height: 24px;
            text-align: left;
            text-underline-position: from-font;
            text-decoration-skip-ink: none;
        }
        .monthly-price-text p {
            padding: 0;
            width: 248px;
            margin-top: 20px;
            font-size: 14px;
            font-weight: 400;
            line-height: 16.8px;
            text-align: left;
            text-underline-position: from-font;
            text-decoration-skip-ink: none;
        }
        .monthly-price p {
            width: 156px;
            font-size: 14px;
            font-weight: 400;
            line-height: 16.8px;
            text-align: left;
            text-underline-position: from-font;
            text-decoration-skip-ink: none;
        }
    }
</style>