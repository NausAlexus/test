---
import CardMorningConfig from "../config/main-config.json"
---

<div>{CardMorningConfig.cardMornings[0].textButton}</div>

<style>
  div {
    text-underline-position: from-font;
    text-decoration-skip-ink: none;

    background: var(--bg-button);
    border: none;
    cursor: pointer;
    transition: opacity 0.3s ease;

    width: 291.33px;
    height: 44px;
    padding: 10px 60px 10px 60px;
    border-radius: 75px;

    font-size: 16px;
    font-weight: 700;
    line-height: 24px;
    text-align: center;
    margin-top: 40px;
  }
  @media(min-width: 1024px){
    div:hover {
      opacity: 0.7;
    }
  }

  @media (max-width: 1250px) {
    div {
      width: 248px;
      height: 46px;

      font-family: "Sitara-Bold" sans-serif;
      font-size: 22px;
      line-height: 26.4px;
    }
  }
</style>
