---
import StoriesImg from "../../../img/home_img/stories-img.svg"
import StoriesHomeConfig from "../config/main-config.json"
---

<div class="stories-right-container">
    <img src="/test/img/home_img/stories-img.svg" alt="Storis">
    <div class="stories-right-item">
        <h3>{StoriesHomeConfig.storiesHome[0].storiesRightWidget[0].subtitle}</h3>
        <p>{StoriesHomeConfig.storiesHome[0].storiesRightWidget[0].description}</p>
    </div>
</div>

<style>
    .stories-right-container {
        margin-top: -36px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .stories-right-item {
        width: 577px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 40px;
        border-radius: 30px;

        background: #00000066;
        backdrop-filter: blur(30px);
        -webkit-backdrop-filter: blur(30px);
        will-change: backdrop-filter;
        box-shadow: 
            0px 0px 10px 0px #00000033,
            0px 0px 10px 0px #FFFFFF40 inset,
            0px 4px 4px 0px #FFFFFF4D inset,
            0px 2px 6px 0px #0000004D;
    }
    img {
        display: block;
    }
    h3 {
        font-family: Arial;
        font-size: 32px;
        font-weight: 700;
        line-height: 32px;
        text-align: left;
        text-underline-position: from-font;
        text-decoration-skip-ink: none;
    }

    p {
        font-family: Arial;
        font-size: 18px;
        font-weight: 400;
        line-height: 23.4px;
        text-align: left;
        text-underline-position: from-font;
        text-decoration-skip-ink: none;
        margin-top: 10px;
        color: var(--color-widget-text);
    }
    /* Адаптируем под разрешение от 1024 до 1400px */
    @media (max-width: 1400px) {
        .stories-right-item {
            width: 457px;
        }
    }
    /* Адаптируем под разрешение от 768 до 1024px */
    @media (max-width: 1024px) {
        .stories-right-container {
            margin-top: 200px;
        }
        .stories-right-item {
            width: 360px;
        }
        img {
            width: 400px;
        }
    }
    /* Адаптируем под разрешение от 425 до 768px */
    @media (max-width: 768px) {
        .stories-right-item {
            width: 100%;
        }
        .stories-right-item {
            order: 1;
        }
        img {
            margin-top: 20px;
            order: 2;
        }
        .stories-right-container {
            margin-top: 20px;
        }
    }
    /* Адаптируем под разрешение до 425px */
    @media (max-width: 425px) {
        img {
            width: 328px;
        }
    }
</style>