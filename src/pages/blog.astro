---
import Layout from "../Layouts/Layout.astro";
import CardFitness from "../components/CardFitness.astro";
import CardPower from "../components/CardPower.astro";
import CardMornings from "../components/CardMornings.astro";
---

<Layout>
  <div class="blog-cards">
    <CardMornings />
    <CardFitness />
    <CardPower />
  </div>
</Layout>

<style>
  .blog-cards {
    margin-bottom: 88px;
    margin-top: 100px;
    display: flex;
    gap: 40px;
    justify-content: center;
    width: 100%;
  }

  @media (max-width: 1250px) {
    .blog-cards {
      gap: 20px;
    }
  }
  @media (max-width: 1024px) {
    .blog-cards {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
